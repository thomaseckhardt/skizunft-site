---
import { Icon as AstroIcon } from 'astro-icon'
// import { Icon as AstroIcon } from 'astro-icon/components'
import clsx from 'clsx'

// https://icon-sets.iconify.design/fluent/

const {
  pack = 'fluent',
  name = 'warning-24-filled',
  filename,
  className = 'inline-block',
  size = 24,
  ...props
} = Astro.props

const iconProps = filename
  ? {
      name: filename,
    }
  : {
      pack,
      name,
    }
---

<AstroIcon
  {...iconProps}
  class={clsx('flex-none', className)}
  size={size}
  {...props}
/>
